{
  "name": "SML",
  "version": "0",
  "manifest_version": 2,

  "description": "Allows Opera 15+ to display SML web pages",
  "developer": { "name" : "cursorial" },
  "icons": { "16" : "SML.png" },
  "background": {"scripts": ["sml.js"]},
  "browser_action": {"default_icon" : "sml.png"},
  "permissions": ["tabs", "http://*/*"],
  "content_scripts" : [
     {
       "matches" : [ "file:///*.sml", "http://*/*.sml" ],
       "js" : [ "compile.js" ]
     }
  ]
}